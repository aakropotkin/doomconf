#! /bin/sh
# -*- mode: sh; sh-shell: sh; -*-
# ============================================================================ #
#
#
#
# ---------------------------------------------------------------------------- #

set -eu;


# ---------------------------------------------------------------------------- #

: "${USE_CLIENT=}";
: "${EMACSCLIENT:=emacsclient}";
: "${EMACS:=emacs}";
: "${GREP:=grep}";


# ---------------------------------------------------------------------------- #

# Detect if an emacs daemon is currently running with live frames.
daemon_running_p() {
  ${EMACSCLIENT:?} -n -e "(if (> (length (frame-list)) 1) 't)" 2>/dev/null  \
    |${GREP:?} -q '^t$';
}


# ---------------------------------------------------------------------------- #

# Disable logging
exec 1>/dev/null;
exec 2>/dev/null;

if test "$USE_CLIENT"; then
  set -- -nqc "$@";
  if ! daemon_running_p; then
    set -- -a '' "$@";
  fi
  exec ${EMACSCLIENT:?} "$@";
else
  nohup setsid ${EMACS:?} "$@" &
fi



# ---------------------------------------------------------------------------- #
#
#
#
# ============================================================================ #
# vim: set filetype=sh :
